{
  "name": "mcp-lubrication",
  "version": "0.1.0",
  "description": "MCP server for reducing friction using AI",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "mcp-lubrication": "dist/index.js"
  },
  "scripts": {
    "clean": "npx rimraf dist/ node_modules/",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "demo": "node dist/demo-client.js",
    "dev:demo": "ts-node src/demo-client.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/ test/",
    "lint:fix": "eslint src/ test/ --fix",
    "format": "prettier --write src/ test/ *.md *.json",
    "format:check": "prettier --check src/ test/ *.md *.json",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "ci": "pnpm install && pnpm run build && pnpm test",
    "reset-state": "bash scripts/reset-state.sh",
    "prepare": "husky"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.23.0",
    "@types/express": "^5.0.5",
    "axios": "1.13.2",
    "express": "^5.1.0",
    "js-yaml": "4.1.1",
    "zod": "4.1.13"
  },
  "devDependencies": {
    "@eslint/js": "9.39.1",
    "@types/node": "24.10.1",
    "@typescript-eslint/eslint-plugin": "8.48.0",
    "@typescript-eslint/parser": "8.48.0",
    "@vitest/coverage-v8": "4.0.14",
    "eslint": "9.39.1",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.4",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "prettier": "3.7.1",
    "@types/supertest": "^2.0.12",
    "supertest": "6.3.3",
    "ts-node": "10.9.2",
    "typescript": "5.9.3",
    "vitest": "4.0.14"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,yaml,yml,md}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "mcp",
    "friction-reducer",
    "testing",
    "ai"
  ],
  "author": "Atomic-Germ",
  "license": "MIT"
}
